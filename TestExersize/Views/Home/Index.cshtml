@using TestExersize.Models

@model IEnumerable<Task>
@{
    ViewBag.Title = "Список задач";
}

@section Scripts {
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <script>			
        Notify = {				
            TYPE_INFO: 0,				
            TYPE_SUCCESS: 1,				
            TYPE_WARNING: 2,				
            TYPE_DANGER: 3,								
            
            generate: function (aOptHeader, aOptType_int) {
                if (aOptHeader && aOptHeader != "undefined") {
                    var lTypeIndexes = [this.TYPE_INFO, this.TYPE_SUCCESS, this.TYPE_WARNING, this.TYPE_DANGER];
                    var ltypes = ['alert-info', 'alert-success', 'alert-warning', 'alert-danger'];
                    var ltype = ltypes[this.TYPE_INFO];

                    if (aOptType_int !== undefined && lTypeIndexes.indexOf(aOptType_int) !== -1) {
                        ltype = ltypes[aOptType_int];
                    }

                    var lText
                    if (aOptHeader == 1) { lText = "<b>Задача добавлена!</b>" }
                    if (aOptHeader == 2) { lText = "<b>Задача отредактирована!</b>" }
                    var lNotify_e = $("<div id='note' data-notify='container' class='col-xs-11 col-sm-4 animated fadeInDown alert " + ltype + " role = 'alert' '><button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>×</span></button>" + lText + "</div>");

                    setTimeout(function () {
                        lNotify_e.alert('close');
                    }, 3000);
                    lNotify_e.appendTo($("#notifies"));
                }
            }			
        };		
    </script>	
}

@section Body {

    <div id="summary" class="panel panel-primary">
        @Html.Partial("Summary", Model)
    </div>

}